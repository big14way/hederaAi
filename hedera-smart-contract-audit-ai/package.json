{
  "name": "hedera-smart-contract-audit-ai",
  "version": "0.1.0",
  "description": "AI-powered security audit tool for Hedera smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "analyze": "ts-node src/index.ts analyze",
    "analyze-dir": "ts-node src/index.ts analyze-dir",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "server": "ts-node server.ts",
    "server:dev": "ts-node-dev --respawn server.ts",
    "client": "cd frontend && npm start",
    "client:build": "cd frontend && npm run build",
    "client:install": "cd frontend && npm install",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run client\"",
    "build:full": "npm run build && npm run client:build",
    "start:full": "node dist/server.js"
  },
  "keywords": [
    "hedera",
    "smart-contract",
    "security",
    "audit",
    "ai",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hashgraph/sdk": "^2.19.0",
    "@solidity-parser/parser": "^0.16.0",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "highlight.js": "^11.8.0",
    "node-fetch": "^2.6.9",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^2.6.3",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
